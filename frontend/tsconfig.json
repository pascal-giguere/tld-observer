{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@images/*": ["static/images/*"],
      "@components/*": ["src/components/*"],
      "@global/*": ["src/global/*"],
      "@layouts/*": ["src/layouts/*"],
      "@pages/*": ["src/pages/*"],
      "@styles/*": ["src/styles/*"]
    },
    "noEmit": true
  },
  "include": ["src", "types.d.ts", "../common/types.d.ts"]
}
